<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Calculator" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="button_special_base">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="button_special_green" parent="button_special_base">
        <item name="android:background">@drawable/button_shape_special</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="button_special_orange" parent="button_special_base">
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/button_shape_special</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="button_special_reversed" parent="button_special_base">
        <item name="android:background">@drawable/button_shape_reversed</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_nums" parent="button_special_base">
        <item name="android:background">@drawable/button_shape_nums</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="button_special_del" parent="button_special_base">
        <item name="android:background">@drawable/button_shape_del</item>
        <item name="android:textColor">@color/green</item>
    </style>

</resources>