<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:padding="10dp"
    android:gravity="center">



    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:textStyle="normal"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:paddingHorizontal="17dp"
        android:paddingVertical="5dp"
        android:layout_above="@id/board"
        android:gravity="end"
        android:paddingEnd="42dp"/>
    <LinearLayout
        android:id="@+id/extra_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/board"
        android:orientation="horizontal"
        android:weightSum="5"
        android:gravity="end"
        android:paddingEnd="30dp">

        <Button
            android:text="⌫"
            android:id="@+id/del"
            style="@style/button_special_del_sci"
            android:layout_marginEnd="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/sqrt"
                style="@style/button_nums_left_sci"
                android:text="√" />

            <Button
                android:id="@+id/pow"
                style="@style/button_nums_left_sci"
                android:text="^" />
            <Button
                android:id="@+id/factorial"
                style="@style/button_nums_left_sci"
                android:text="!" />

            <Button
                android:id="@+id/reciprocal"
                style="@style/button_nums_left_sci"
                android:text="1/" />

            <Button
                android:id="@+id/abs"
                style="@style/button_nums_left_sci"
                android:text="abs" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/sin"
                style="@style/button_nums_left_sci"
                android:text="sin" />

            <Button
                android:id="@+id/cos"
                style="@style/button_nums_left_sci"
                android:text="cos" />

            <Button
                android:id="@+id/tan"
                style="@style/button_nums_left_sci"
                android:text="tan" />

            <Button
                android:id="@+id/log"
                style="@style/button_nums_left_sci"
                android:text="log" />

            <Button
                android:id="@+id/ln"
                style="@style/button_nums_left_sci"
                android:text="ln" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/reset"
                style="@style/button_special_orange_sci"
                android:text="C" />

            <Button
                android:id="@+id/n7"
                style="@style/button_nums_sci"
                android:text="7" />

            <Button
                android:id="@+id/n4"
                style="@style/button_nums_sci"
                android:text="4" />

            <Button
                android:id="@+id/n1"
                style="@style/button_nums_sci"
                android:text="1" />

            <Button
                android:id="@+id/negate"
                style="@style/button_nums_sci"
                android:text="+/-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/par"
                style="@style/button_special_green_sci"
                android:text="( )" />

            <Button
                android:id="@+id/n8"
                style="@style/button_nums_sci"
                android:text="8" />

            <Button
                android:id="@+id/n5"
                style="@style/button_nums_sci"
                android:text="5" />

            <Button
                android:id="@+id/n2"
                style="@style/button_nums_sci"
                android:text="2" />

            <Button
                android:id="@+id/n0"
                style="@style/button_nums_sci"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/percent"
                style="@style/button_special_green_sci"
                android:text="%" />

            <Button
                android:id="@+id/n9"
                style="@style/button_nums_sci"
                android:text="9" />

            <Button
                android:id="@+id/n6"
                style="@style/button_nums_sci"
                android:text="6" />

            <Button
                android:id="@+id/n3"
                style="@style/button_nums_sci"
                android:text="3" />

            <Button
                android:id="@+id/decimal"
                style="@style/button_nums_sci"
                android:text="." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/div"
                style="@style/button_special_green_sci"
                android:text="÷" />

            <Button
                android:id="@+id/mul"
                style="@style/button_special_green_sci"
                android:text="×" />

            <Button
                android:id="@+id/sub"
                style="@style/button_special_green_sci"
                android:text="—" />

            <Button
                android:id="@+id/add"
                style="@style/button_special_green_sci"
                android:text="+" />

            <Button
                android:id="@+id/equal"
                style="@style/button_special_reversed_sci"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>